# Slack App Configuration
# Get these values from your Slack App settings at https://api.slack.com/apps

# Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Signing Secret (found in Basic Information > App Credentials)
SLACK_SIGNING_SECRET=your-signing-secret-here

# App Token (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token-here

# Target Channel Configuration
# Either set the channel ID directly:
CHANNEL_ID=C1234567890

# Or set the channel name (app will resolve to ID automatically):
CHANNEL_NAME=production-ems-in8code-gwunspoken

# Google Sheets Integration (Optional)
# Google Sheet ID (found in the URL of your sheet)
GOOGLE_SHEET_ID=your-google-sheet-id-here

# Google Service Account Key (JSON string)
# Create a service account and download the JSON key file
# Then paste the entire JSON content here (as a single line)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Google Sheet Range (optional, defaults to Sheet1!A:L)
GOOGLE_SHEET_RANGE=Sheet1!A:L

# Server Configuration (optional)
PORT=3000
